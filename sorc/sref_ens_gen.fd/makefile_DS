#!/bin/sh
#
#  This makefile is to compile ensembel production generator
#  Author: Binbin Zhou
#          Aug 1, 2005
#  OS: AIX (IBM-blue)
#  Oct. 2, 2012: Modified for Linux OS (Jun Du)
#


FC=     ifort -O3 -convert big_endian
ARCH     = 
OPTS     = 
LIST     =
#FREE     = -qfree
FREE     =
TRAPS    =
PROFILE  =
DEBUG    = -g
MEM      =
MAP      =
W3LIBDIR = /nwprod/lib
ESSL     = 
MASS     = 


SRC=	util.f \
	char_process.f \
	print.f pack.f \
	preciptype.f apcp.f snow.f wind.f \
	dtra.f frzn.f  \
	mxp.f get_mxp.f pack_mxp.f \
	get_prev_precip_temp.f

OBJ=${SRC:.f=.o}

LIBS= $(ESSL) $(MASS) $(OPTS) $(LIST) $(TRAPS) $(PROFILE) $(DEBUG) ${W3NCO_LIB4} ${BACIO_LIB4} ${IP_LIB4}

sref_ens_gen_DS: $(OBJ)
	$(FC)  -o $(@) sref_ens_gen_DS.f $(OBJ) $(LIBS)
clean:
	/bin/rm -f sref_ens_gen_DS *.o
clear:
	/bin/rm  *.o
