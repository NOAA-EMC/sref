#######################################################
# This file defines the various input varibles for the
# SREF model run
#######################################################
# From Gyre
# export CRAY1= /gpfs/gp1/nco/ops
# export CRAY2= /gpfs/gp2/nco/ops
# From Tide
  export CRAY1= /gpfs/tp1/nco/ops
  export CRAY2= /gpfs/tp2/nco/ops

  export NWROOT=$CRAY2/nwprod
  export NWROOTp1=CRAY1/nwprod
  export COMROOT=$CRAY2/com
  export COMROOTp1=$CRAY1/com
  export GESROOT=$CRAY2/nwges
  export GESROOTp1=$CRAY1/nwges

  export HOMEsref=/gpfs/hps/meso/save/${USER}/sref.v7.1.0
  export EXECsref=$HOMEsref/exec
  export FIXsref=$HOMEsref/fix
  export PARMsref=$HOMEsref/parm
  export USHsref=$HOMEsref/ush
  export SCRIPTSsref=$HOMEsref/scripts
  export POSTGPSH=$HOMEsref/ush/global_postgp.sh

  export HOMEglobal=/nwprod
  export EXECglobal=$HOMEglobal/exec
  export FIXglobal=$HOMEglobal/fix
  export PARMglobal=$HOMEglobal/parm
  export USHglobal=$HOMEglobal/ush

  export SENDCOM=YES
  export SENDCOM_GB2=YES
  export SENDDBN=NO
  export SENDDBN_GB2=NO
  export SENDSMS=NO
  export DBNROOT=DBNROOT_OFF

  export RUN_TCTRACK=NO

  export DATA_IN=/gpfs/hps/ptmp/$LOGNAME/tmpnwprd
  export jlogfile=$DATA_IN/jlogfile

  export com=/gpfs/hps/ptmp/$LOGNAME/com/sref/${envir}
  export COM=/gpfs/hps/ptmp/$LOGNAME/com/sref/${envir}
# export com=/com/sref/${envir}
# export COM=/com/sref/${envir}

  export COMglb_IN=$CRAY2/com/sref/${envir}
  export COM_IN=/gpfs/hps/ptmp/$LOGNAME/com/sref/${envir}
#
# ---------------------------------------
  export COM_OUT=/gpfs/hps/ptmp/$LOGNAME/com/sref/${envir}
  export gespath=/gpfs/hps/ptmp/$LOGNAME/nwges/${envir}
# export gespath=/nwges/${envir}
# export GESNDAS=/ptmpp1/$LOGNAME/nwges/prod
  export GESNDAS=$CRAY2/nwges/prod

# com
  export COMGFS=$CRAY2/com/gfs/prod
  export COMENS=$CRAY2/com/gens/prod

  export COMRTMA=$CRAY2/com/rtma/prod
  export COMINnam=$CRAY2/com/nam/prod
  export COMINrap=$CRAY2/com/rap/prod

