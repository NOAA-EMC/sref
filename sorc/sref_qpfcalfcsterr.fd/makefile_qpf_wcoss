SHELL=/bin/sh
SRCS 	= sref_cal_qpffcsterr.f
OBJS	= sref_cal_qpffcsterr.o
FC 	= ifort -O3 -convert big_endian
LDFLAGS =
LIBS 	= ${W3NCO_LIB4} ${W3EMC_LIB4} ${BACIO_LIB4}
CMD 	= sref_cal_qpffcsterr

all:	$(CMD)

$(CMD):	 ${OBJS}
	$(FC) $(LDFLAGS) -o $(@) $(OBJS) $(LIBS)

clean:
	$(RM) -f $(CMD) $(OBJS)
