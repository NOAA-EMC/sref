SHELL=/bin/sh
SRCS 	= clusterweight.f
OBJS	= clusterweight.o

FC 	= ifort -O3 
#FC 	= ifort -O3 -mcmodel=medium
#FC 	= ifort -O3 -convert big_endian
LDFLAGS =
LIBS 	= ${W3NCO_LIB4} ${BACIO_LIB4} 
CMD 	= sref_clusterweight

all:	$(CMD)

$(CMD):	 ${OBJS}
	$(FC) $(LDFLAGS) -o $(@) $(OBJS) $(LIBS)
clean:
	rm -f $(OBJS) $(CMD)
